
  <div class="column is-half-tablet is-4-desktop has-text-centered">
    <div class ="card">
      <header class="card-header">
        <h1 class="card-header-title">
          <%= trait.trait_type.capitalize%>
        </h1>
      </header>
      <div id="<%= dom_id trait %>">
         <div class="card">
          <div class="card-content">
            <div class="content">
              <h3><%= trait.name.capitalize%> </h3>
            </div>
            <% if trainer_signed_in? %>
              <br>
              <p>
                <%= link_to "Show this trait", trait %>
              </p>
            <%end%>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
